<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>12</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <RootNamespace>Lumora.Core</RootNamespace>
    <AssemblyName>LumoraCore</AssemblyName>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup>
    <Description>LumoraCore - Platform-agnostic VR engine core library (no Godot dependencies)</Description>
    <Company>Lumora Project</Company>
    <Product>LumoraCore</Product>
    <Version>0.1.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <!-- NO Godot dependencies - platform-agnostic only -->
    <PackageReference Include="System.Threading.Channels" Version="8.0.0" />
    <PackageReference Include="LiteNetLib" Version="1.3.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\LumoraCDN\LumoraCDN.csproj" />
  </ItemGroup>
</Project>
